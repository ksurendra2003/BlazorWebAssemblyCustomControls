
<div class="@DropDownOpenCss" id="ddlc">

    <input type="text" value="@SelectedText" @onclick="ShowDropDown" />
    <span class="caret"></span>

    <ul class="dropdown-menu">
        @foreach (var item in DataSource)
        {
        <li>
            <a class="dropdown-item" href="#" @onclick="() => OnItemSelect(item)">@item</a>
        </li>
        }
    </ul>
</div>

